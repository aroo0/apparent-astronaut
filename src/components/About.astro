---

type Skill = string;
type SkillsList = Skill[];

const programmingLanguages: SkillsList  = [
  "HTML",
  "JavaScript",
  "TypeScript",
  "CSS",
  "Python",
  "PostCSS",
  "Git",
  "GitHub",
  "Tailwind"
];

const webFrameworks: SkillsList = [
  "API", 
  "React", 
  "Redux", 
  "Vite", 
  "Astro",
  "Next.js"
  
];

const designTools: SkillsList = [
  "Figma", 
  "Photoshop",
  "BEM",
  "Responsive Design",
  'SEO'
];

const allItems = [
  ...programmingLanguages, 
  ...webFrameworks, 
  ...designTools
];

// Function to generate pastel colors
function generatePastelColor() {
    return "hsl(" + 360 * Math.random() + ',' +
    (67 * Math.random()) + '%,' + 
    (68 + 10 * Math.random()) + '%)'
  }


---
<section class="about" id="about">
    <div class='container'>
    <h2 class="hidden">Get to know,</h2>
        <div class="grid two-one">
            <div class='about-content column'>
                <h3 class="hidden">My aproach</h3>
                <p class="hidden">As a Frontend Developer, I am constantly eager to expand my skillset, explore new frameworks, and experiment with cutting-edge technologies to create modern and innovative web experiences.</p>
                <p class="hidden">My primary focus is on building front-end projects that prioritize user experiences, while also delivering clean and functional designs.</p>
                <p class="hidden">I encourage you to explore some of my projects in the Projects section.</p>
            </div>
            <div class='column'>
                <h3 class="hidden">Skills</h3>
                <div class="skills-container tag-container">
                    {allItems.map((skill, index) =>  (
                        <span class='skill hidden'  style={{ backgroundColor: generatePastelColor(), transitionDelay: `${100 + (index * 60)}ms` }}>{skill}</span>
                    ))}
                </div>
            </div>
        </div>
    </div>
  </section>

  <style>

.about {
    background-color: var(--bg-gray);
    padding-top: clamp(.8rem, 9vw, 9rem);
    padding-bottom: clamp(2rem, 17vw, 20rem);


    & .about-content > :nth-child(1) {
      transition-delay: 200ms;
    }
    & .about-content > :nth-child(3) {
      transition-delay: 400ms;

    }
    & .about-content > :nth-child(4) {
      transition-delay: 600ms;

}

    & .skills-container {
        gap: 1rem
    }

    & .skill {
        font-size: clamp(0.75rem, 2vw, 1rem);
        padding: .5rem 1.25rem;
        border-radius: 3rem;
        line-height: 1;
        margin-bottom: .5rem;

    }

    & .skill::before {
        content: '\2713';
        margin-right: 5px;
    }
}




  </style>